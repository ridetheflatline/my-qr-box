<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:mx="library://ns.adobe.com/flex/mx"
               minWidth="900" minHeight="480">
    <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->
    </fx:Declarations>
    <s:HGroup width="100%" height="100%">
        <s:Group id="menu" width="20%" height="100%">
            <mx:Accordion width="100%" height="100%">
                <s:NavigatorContent width="100%" height="100%" label="第一步：创建QR码">
					<s:Group width="100%" height="100%">
						<mx:Canvas width="100%" height="100%" backgroundColor="#ff00ff">
							<s:DropDownList y="10" width="90%" height="5%" horizontalCenter="0" requireSelection="true" labelField="lbl" >
								<s:ArrayCollection>
									<fx:Object lbl="A" val="1"/>
									<fx:Object lbl="B" val="2"/>
								</s:ArrayCollection>
							</s:DropDownList>
							<mx:ViewStack id="viewstack1" x="10" y="39" width="90%" height="75%">
								<s:NavigatorContent width="100%" height="100%" label="View 1">
								</s:NavigatorContent>
							</mx:ViewStack>
							
						</mx:Canvas>
					</s:Group>
                </s:NavigatorContent>
                <s:NavigatorContent width="100%" height="100%" label="第二步：个性化QR码">
                </s:NavigatorContent>
                <s:NavigatorContent width="100%" height="100%" label="第三步：分享QR码">
                </s:NavigatorContent>
            </mx:Accordion>
        </s:Group>
        <s:Group id="action" width="80%" height="100%">
            <mx:Canvas width="100%" height="100%" backgroundColor="#0000ff"/>
        </s:Group>
    </s:HGroup>
</s:Application>
